@page
@model CityBreaks.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<h2>Cidades Disponíveis</h2>

@foreach (var city in Model.Cities)
{
    <div style="margin-bottom: 1rem;">
        <h3>@city.Name, @city.Country.CountryName</h3>
        <ul>
            @foreach (var property in city.Properties)
            {
                <li><strong>@property.Name</strong> – R$ @property.PricePerNight</li>
            }
        </ul>
    </div>
}
